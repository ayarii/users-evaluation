{% extends 'base.html.twig' %}

{% block title %}Affectation des Notes
{% endblock %}
{% block titlepage %}Affectation des Notes
{% endblock %}


{% block content %}
	<div class="row">
		<div class="col-12">
			<br>
			{% for type, messages in app.flashes %}
				{% for message in messages %}
					<div class="alert alert-{{ type }} alert-dismissible fade show d-flex align-items-center">
						{% if type == 'success'%}
							<i class="fas fa-check-circle" style="padding-right: 10px"></i>
						{% elseif type == 'danger'%}
							<i class="fas fa-times-circle" style="padding-right: 10px"></i>
						{% endif %}
						<div>
							{{ message }}
						</div>
						<button type="button" class="close" data-dismiss="alert" aria-label="Close">
							<span aria-hidden="true">&times;</span>
						</button>
					</div>
				{% endfor %}
			{% endfor %}

			<br>
			<div class="card">
				<div class="card-header">
					<h3 class="card-title">Affectation des Notes</h3>
                    
					<div class="d-flex justify-content-end" style="padding-top: 15px;padding-right: 25px;" >
                   
				</div>
				<div class="card-body">
					<table id="example1" class="table table-bordered table-hover table-striped">
						<thead>
							<tr>
								
								<th>Evaluation</th>
								<th>Utilisateur</th>
                                <th>Score</th>
								
								<th>actions</th>
							</tr>
						</thead>
						<tbody>
							{% for aff in affectationnotes %}
								<tr>
									<td>{{ aff[0].critere.idEvaluation.libelle }}</td>
									<td>{{ aff[0].user.nom }} {{ aff[0].user.prenom }}</td>
									
									
									<td>{{aff.totalNote }}</td>
									<td>
										<a href="{{ path('app_evaluation_showDetails', {'idEv': aff[0].critere.idEvaluation.id ,'idUser':  aff[0].user.id  }) }}"><i class="fas fa-info-circle text-info"></i></a>
									</td>
								</tr>
							{% else %}
								<tr>
									<td colspan="10">no records found</td>
								</tr>
							{% endfor %}
						</tbody>
						<tfoot>
							<th>Evaluation</th>
								<th>Utilisateur</th>
                                <th>Score</th>
								<th>actions</th>
						</tfoot>
					</table>
				</div>
			</div>
		</div>
	</div>
</div>



{% endblock %}
