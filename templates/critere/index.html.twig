{% extends 'base.html.twig' %}

{% block title %}Critere index{% endblock %}

{% block body %}
    <h1>Critere index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Libelle</th>
                <th>Ponderation</th>
                <th>Description</th>
                <th>CreatedAt</th>
                <th>UpdatedAt</th>
                <th>Enabled</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for critere in criteres %}
            <tr>
                <td>{{ critere.id }}</td>
                <td>{{ critere.libelle }}</td>
                <td>{{ critere.ponderation }}</td>
                <td>{{ critere.description }}</td>
                <td>{{ critere.createdAt ? critere.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ critere.updatedAt ? critere.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ critere.enabled ? 'Yes' : 'No' }}</td>
                <td>
                    <a href="{{ path('app_critere_show', {'id': critere.id}) }}">show</a>
                    <a href="{{ path('app_critere_edit', {'id': critere.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_critere_new') }}">Create new</a>
{% endblock %}
