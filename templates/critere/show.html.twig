{% extends 'base.html.twig' %}

{% block title %}Critere{% endblock %}

{% block content %}

    <h1>Critere</h1>

    <table class="table">
        <tbody>
           
            <tr>
                <th>Libelle</th>
                <td>{{ critere.libelle }}</td>
            </tr>
            <tr>
                <th>Ponderation</th>
                <td>{{ critere.ponderation }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ critere.description|raw }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ critere.createdAt ? critere.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ critere.updatedAt ? critere.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Enabled</th>
                <td>{{ critere.enabled ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_critere_index', {'id': critere.idEvaluation.id}) }}">back to list</a>

{% if critere.idEvaluation.idUser ==  app.user %}
    <a href="{{ path('app_critere_edit', {'id': critere.id}) }}">edit</a>

    {{ include('critere/_delete_form.html.twig') }}
    {% endif %}
{% endblock %}
