{% extends 'base.html.twig' %}

{% block title %}Détails session
{% endblock %}
{% block titlepage %}Détails session
{% endblock %}
{% block page %}Détails session
{% endblock %}

{% block content %}
    <h1>Session</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ session.id }}</td>
            </tr>
            <tr>
                <th>Libelle</th>
                <td>{{ session.libelle }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ session.description }}</td>
            </tr>
            <tr>
                <th>DateDebut</th>
                <td>{{ session.dateDebut ? session.dateDebut|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>DateFin</th>
                <td>{{ session.dateFin ? session.dateFin|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ session.createdAt ? session.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ session.updatedAt ? session.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Enabled</th>
                <td>{{ session.enabled ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_session_index') }}" class="btn btn-success"><i class="fas fa-edit" style="padding-right:3px"></i>Back to list</a>

    <a href="{{ path('app_session_edit', {'id': session.id}) }}" class="btn btn-warning"><i class="fas fa-edit" style="padding-right:3px"></i>Edit</a>


    {{ include('session/_delete_form.html.twig') }}
{% endblock %}
