{% extends 'base.html.twig' %}

{% block title %}Badge{% endblock %}

{% block body %}
    <h1>Badge</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ badge.id }}</td>
            </tr>
            <tr>
                <th>Libelle</th>
                <td>{{ badge.libelle }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ badge.description }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ badge.createdAt ? badge.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ badge.updatedAt ? badge.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Enabled</th>
                <td>{{ badge.enabled ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_badge_index') }}">back to list</a>

    <a href="{{ path('app_badge_edit', {'id': badge.id}) }}">edit</a>

    {{ include('badge/_delete_form.html.twig') }}
{% endblock %}
